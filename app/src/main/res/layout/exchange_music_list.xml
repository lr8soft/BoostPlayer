<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/musiclist_searchPlane"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/musiclist_scanPlane"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHeight_percent="0.1">
        <EditText
            android:id="@+id/musiclist_search_textbox"
            android:hint="输入歌曲名称"
            android:singleLine="true"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"/>
        <Button
            android:id="@+id/musiclist_search_submitbtn"
            android:text="搜索"
            android:textSize="18sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/musiclist_scanPlane"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/musiclist_searchPlane"
        app:layout_constraintBottom_toTopOf="@id/musiclist_showList"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHeight_percent="0.1">
        <EditText
            android:id="@+id/musiclist_scann_rootbox"
            android:singleLine="true"
            android:text="/sdcard"
            android:hint="根文件夹"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.375"/>
        <EditText
            android:id="@+id/musiclist_scann_sizebox"
            android:hint="排除最小MB"
            android:text="0.2"
            android:singleLine="true"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.375"/>
        <Button
            android:id="@+id/musiclist_scann_submitbtn"
            android:text="扫描"
            android:textSize="18sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"/>
    </LinearLayout>
    <ListView
        android:id="@+id/musiclist_showList"
        android:background="@drawable/default_boreder"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/musiclist_scanPlane"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
    </ListView>
</androidx.constraintlayout.widget.ConstraintLayout>